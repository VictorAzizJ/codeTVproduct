{
  "manifest_version": 3,
  "name": "Study Checkout",
  "version": "1.0.0",
  "description": "Turn shopping into a learning opportunity...",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://openrouter.ai/*"],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content.bundle.js"],
    "css": ["src/content/quiz/styles.css"],
    "run_at": "document_idle"
  }],
  "options_page": "src/options/view.html",
  "action": {
    "default_popup": "src/popup/view.html",
    "default_title": "Study Checkout Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["src/content/quiz/view.html"],
    "matches": ["<all_urls>"]
  }]
}