{
  "manifest_version": 3,
  "name": "Shopping Debate",
  "version": "1.0.0",
  "description": "Three AI personalities debate your purchase decisions",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://openrouter.ai/*"],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content.bundle.js"],
    "css": ["src/content/debate-modal.css"],
    "run_at": "document_idle"
  }],
  "options_page": "src/options/view.html",
  "action": {
    "default_popup": "src/popup/view.html",
    "default_title": "Shopping Debate Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}